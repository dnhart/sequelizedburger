<div class="container">
    <div class="row header">
        <h1>Burgers!</h1>
        <img src="/img/burger.png" />
    </div>
<div class ="row addburger">
    <h2>Add a Burger</h2>
        <form class="create-update-form form-inline" action="/" method="POST">

        <div class="form-group">
            <label for="burgName">Burger Name:</label>
            <input type="text" id="burgName" name="burger_name">
        </div>

        <button type="submit" class="btn-primary">Add Burger</button>
        </form>
</div>
<div class="row">
    <div class="col-sm-6" id="notdevoured">
<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
      
   
   <form action="/{{this.id}}?_method=PUT" method="POST">
            {{this.burger_name}}
          <input type="hidden" name="devoured" value="true">
   
          <button type="submit" class="btn-danger">Devour It!</button>
    </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
    </div>   
    <div class="col-sm-6" id="devoured">
<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>
    </div>  
</div>

</div> <!--end container -->